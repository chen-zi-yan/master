<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnly.provincial.dao.area.AreaMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hnly.provincial.entity.area.Area">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="father_code" property="father_code" />
        <result column="create_time" property="create_time" />
        <result column="update_time" property="update_time" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, code, father_code, create_time, update_time, status
    </sql>
    
    <!--新增Area数据-->
    <insert id="add" parameterType="com.hnly.provincial.entity.area.Area">
        insert into ly_newst.t_area(id,name,code,father_code,create_time,update_time,status)
        values (#{id},#{name},#{code},#{father_code},#{create_time},#{update_time},#{status})
    </insert>

    <!--查询code是否已经存在-->
    <select id="getByCode" parameterType="string" resultType="long">
        select count(*)  from ly_newst.t_area where code = #{code};
    </select>

    <!--根据ID删除数据-->
    <delete id="deleteById" parameterType="long">
        delete from ly_newst.t_area where id = #{id}
    </delete>

    <!--修改数据-->
    <update id="update" parameterType="com.hnly.provincial.entity.area.Area">
        update ly_newst.t_area
        <set>
        <if test="name != null">
            name = #{name},
        </if>
        <if test="code != null">
            code = #{code},
        </if>
        <if test="father_code != null">
            father_code = #{father_code},
        </if>
        <if test="create_time != null">
            create_time = #{create_time},
        </if>
        <if test="update_time != null">
            update_time = #{update_time},
        </if>
        <if test="status != null">
            status = #{status},
        </if>
    </set>
        where id = #{id}
    </update>

</mapper>
